pipeline {
    agent any
    
    environment {
        AWS_DEFAULT_REGION = "ap-south-1" 
    }
    
    stages {
        stage ('Fetch SSM Credentials'){
            steps {
                script {
                    def nexusUser = sh(script: "aws ssm get-parameter --name /jenkins/nexus/username --with-decryption --query Parameter.Value --output text", returnStdout: true).trim()
                    def nexusPass = sh(script: "aws ssm get-parameter --name /jenkins/nexus/password --with-decryption --query Parameter.Value --output text", returnStdout: true).trim()
                    
                    def awsAccess = sh(script: "aws ssm get-parameter --name /myapp/aws_access_key_id --with-decryption --query Parameter.Value --output text", returnStdout: true).trim()
                    def awsSecret = sh(script: "aws ssm get-parameter --name /myapp/aws_secret_access_key --with-decryption --query Parameter.Value --output text", returnStdout: true).trim()
                    
                    env.NEXUS_USER = nexusUser
                    env.NEXUS_PASS = nexusPass
                    env.AWS_ACCESS_KEY_ID = awsAccess
                    env.AWS_SECRET_ACCESS_KEY = awsSecret
                }
            }
        }
    }
}
